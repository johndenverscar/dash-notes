{
  "name": "dash-notes",
  "version": "0.1.0",
  "description": "Dash Notes - Quick note-taking app with global hotkey",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "start": "electron-vite dev",
    "app:build": "electron-vite build && electron-builder",
    "app:pack": "electron-vite build && electron-builder --dir",
    "app:dist": "electron-vite build && electron-builder --mac"
  },
  "keywords": [
    "note-taking",
    "productivity",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-vite": "^4.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.dashnotes.app",
    "productName": "Dash Notes",
    "directories": {
      "output": "dist"
    },
    "icon": "./assets/icon.icns",
    "files": [
      "out/**/*",
      "assets/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "title": "Dash Notes",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "johndenverscar",
      "repo": "dash-notes"
    }
  }
}